---
import { Code } from "astro/components";

type Props = {
  title: string;
  src: Promise<typeof import("*.astro?raw")>;
};
---

<div class="Story">
  <p>
    {Astro.props.title}:
  </p>
  <details class="Story_codeWrapper">
    <summary>Show component source</summary>
    <Code code={(await Astro.props.src).default} lang="astro" />
  </details>

  <div>
    <slot />
  </div>
</div>

<style>
  .Story {
    max-width: 100%;
  }

  .Story_codeWrapper > :global(pre) {
    text-align: left;
    padding: 2rem;
    border-radius: 2rem;
  }
</style>
